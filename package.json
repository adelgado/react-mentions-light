    "enzyme": "^2.0.0",
    "grunt": ">=0.4.1",
    "grunt-contrib-copy": ">=0.4.1",
    "grunt-contrib-less": "~1.0.0",
    "grunt-gh-pages": "~0.9.1",
    "isparta": "^4.0.0",
    "jquery": "^2.2.1",
    "jsdom": "^8.0.4",
    "less": "~2.3.1",
    "less-loader": "^2.2.0",
    "mocha": "^1.20.1",
