{
  "name": "react-mentions-light",
  "version": "0.5.0",
  "description": "React mentions input",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run env NODE_ENV=test && mocha",
    "transpile": "npm run env NODE_ENV=production && babel src --out-dir lib && lessc src/styles.less lib/styles.css",
    "clean": "rimraf lib",
    "start": "cd gh-pages && webpack-dev-server --config webpack.dev.config.js --port 9090 --d --hot --inline --progress --colors",
    "pretranspile": "npm run clean",
    "prepublish": "npm run transpile",
    "prepages-publish": "npm run env NODE_ENV=production && cd gh-pages && webpack",
    "pages-publish": "grunt publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adelgado/react-mentions-light.git"
  },
  "keywords": [
    "react",
    "mentions",
    "react-component"
  ],
  "author": "Jan-Felix Schwarz",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/adelgado/react-mentions-light/issues"
  },
  "homepage": "https://github.com/adelgado/react-mentions-light",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.5.0",
    "babel-plugin-transform-runtime": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "bundle-loader": "0.5.1",
    "chai": "^3.0.0",
    "chai-enzyme": "^0.4.1",
